    echo "User not found";
    header("Location: new_message.php");
    exit;
}

    // Fetch chat history between the two users
    $stmt = $mysqli->prepare("SELECT * FROM chats WHERE (from_user = ? AND to_user = ?) OR (from_user = ? AND to_user = ?) ORDER BY time_sent ASC");
    $stmt->bind_param("iiii", $user_id, $chatUser['id'], $chatUser['id'], $user_id);
    $stmt->execute();
    $chatsResult = $stmt->get_result();
} else {
    header("Location: new_message.php");
    exit;
}

// Check if the form is submitted to add a new message
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $message = $_POST['message'];
    $time_sent = date('Y-m-d H:i:s');

    // Insert the new message into the chats table
    $stmt = $mysqli->prepare("INSERT INTO chats (message, time_sent, from_user, to_user) VALUES (?, ?, ?, ?)");
    $stmt->bind_param("ssii", $message, $time_sent, $user_id, $chatUser['id']);
    $stmt->execute();

    // Redirect to the same page using GET after processing the form submission
    header("Location: chat.php?username=" . urlencode($username));
    exit;
}

// Close the database connection
$mysqli->close();

// Function to format the time in a readable format
function formatTime($time)
{
    $currentTime = time();
    $messageTime = strtotime($time);
    $elapsedTime = $currentTime - $messageTime;

    if ($elapsedTime < 60) {
        return 'Just now';
    } elseif ($elapsedTime < 3600) {
        $minutes = floor($elapsedTime / 60);
        return $minutes . ' minute(s) ago';
    } elseif ($elapsedTime < 86400) {
        $hours = floor($elapsedTime / 3600);
        return $hours . ' hour(s) ago';
    } else {
        return date('M j, Y H:i', $messageTime);
    }
}
